plugdir=/usr/local/libexec/check_mk_agent/plugins
repodir=/usr/local/libexec/check_mk_agent/repo

findscripts() {
    find ${repodir} -type f | sed -e "s#$repodir/##g"
}

script_enabled() {
    s=$1

    if [ -L ${plugdir}/${s} ]; then
        echo "yes"
    else
        echo "no"
    fi
}

enable_script() {
    s=$1

    ln -s ${repodir}/${s} ${plugdir}/${s}
    echo "Enabled $s"
}

scripts=$(findscripts)

if [ ! -z "$1" ]; then
    s=$1
else
    echo "Which plugin do you want to enable?"
    echo ${scripts}
    read s
fi

echo "Enabling $s"

if [ ! -z "$s" ]; then
    if [ ! -r ${repodir}/${s} ]; then
        echo "Plugin $s does not exist!"
        exit 1
    fi

    if [ `script_enabled $s` != "yes" ]; then
        enable_script $s
    fi
fi
